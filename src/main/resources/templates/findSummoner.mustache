{{>layout/header}}

{{#Summoner}}
    <div style="display: flex; align-items: bottom;">
        <img src="http://ddragon.leagueoflegends.com/cdn/11.8.1/img/profileicon/{{profileIconId}}.png" height="150" width="150" style="margin-left: 50px">
        <p style="font-size:25px; font-family:'Malgun Gothic'; font-weight:bold; margin-top: 50px;">
            소환사 닉네임 : {{name}}<br/>
            레벨 : {{summonerLevel}}<br/>
        </p>
    </div>
{{/Summoner}}
{{#LeagueEntry}}
    <div style="display: flex; align-items: bottom;">
        <img src="/images/Emblem_{{tier}}.png" height="230" width="230" style="margin-left: 20px;">
        <p style="font-size:30px; font-weight:bold; margin-top: 35px">
            {{queueType}}<br/>
            {{tier}} {{rank}}<br/>
            {{leaguePoints}}LP / {{wins}}승 {{losses}}패<br/>
        </p>
    </div>
{{/LeagueEntry}}
<hr color="black" size="3px">
    <tr>
        <td>
            {{#ViewMatch}}
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/champion/{{championName}}.png"><br/>
                {{kills}} / {{deaths}} / {{assists}}<br/>
                {{win}}<br/>
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item0}}.png">
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item1}}.png">
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item2}}.png"><br/>
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item3}}.png">
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item4}}.png">
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item5}}.png"><br/>
                <br/>
                <hr color="black" size="3px">
            {{/ViewMatch}}
        </td>
    </tr>

{{>layout/footer}}