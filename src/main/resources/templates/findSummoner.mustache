{{>layout/findheader}}

{{#Summoner}}
    <div style="display: flex; align-items: bottom;">
        <img src="http://ddragon.leagueoflegends.com/cdn/11.8.1/img/profileicon/{{profileIconId}}.png" height="150" width="150" style="margin-left: 50px">
        <p style="font-size:25px; font-family:'Malgun Gothic'; font-weight:bold; margin-top: 40px; margin-left: 20px; line-height: 150%">
            소환사 닉네임 : {{name}}<br/>
            레벨 : {{summonerLevel}}
        <div class="col-md-4" style="float: right; margin-left: 400px; margin-top: 30px">
            <form>
                <div class="form-group">
                    <input type="text" class ="form-control" autocomplete="off" placeholder="소환사명을 입력하세요." onKeyUp="a()" id="inp">
                    <a type = "button" onclick="b()" class="btn btn-primary" id="btn-summoner-find">검색</a>
                </div>
            </form>
        </div>
        <script language="JavaScript">
        var link = "";
            const a=()=>{
                const inp = document.getElementById("inp").value;
                link = inp;
                console.log(link)
            }
            const b=()=>{
                window.location.href = "/summoner/" + link;
            }
        </script>
        </p>
    </div>
{{/Summoner}}
{{#LeagueEntry}}
    <div style="display: flex; align-items: bottom;">
        <img src="/images/Emblem_{{tier}}.png" height="230" width="230" style="margin-left: 20px;">
        <p style="font-size:30px; font-weight:bold; margin-top: 50px; text-align: center; line-height: 160%; ">
            {{queueType}}<br/>
            {{tier}} {{rank}}<br/>
            {{leaguePoints}}LP / {{wins}}승 {{losses}}패<br/>
        </p>
    </div>
{{/LeagueEntry}}
<hr color="black" size="3px" style="font-family: 'Spigel-Bold'">
    <tr>
        <td>
            {{#ViewMatch}}
                <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/champion/{{championName}}.png">
                <span style="font-size: 36px; font-weight: bold; margin: 30px; padding: 5px">
                    {{r_win}}
                </span><br/>
                <div style="font-size: 25px; margin-left: 12px">
                    {{r_name}}
                </div>
                <div style="font-size: 20px; font-weight: bold; margin-left: 12px; font-style:'Malgun Gothic' text-align: center;">
                    <span>
                        {{kills}} /
                    </span>
                    <span style="color: #c6443e;">
                        {{deaths}}
                    </span>
                    <span>
                        / {{assists}}<br/>
                    </span>
                    <span>
                        {{kda}}:1 KDA
                    </span><br/>
                </div>
                <div style="margin-top: 10px">
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item0}}.png" width="60px" height="60px">
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item1}}.png" width="60px" height="60px">
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item2}}.png" width="60px" height="60px"><br/>
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item3}}.png" width="60px" height="60px">
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item4}}.png" width="60px" height="60px">
                    <img src="https://ddragon.leagueoflegends.com/cdn/11.8.1/img/item/{{item5}}.png" width="60px" height="60px"><br/>
                </div>
                <hr color="black" size="3px">
            {{/ViewMatch}}
        </td>
    </tr>

{{>layout/footer}}